%h1 Listing reservas

%table
  %thead
    %tr
      %th Data
      %th Hora
      %th Cliente
      %th Evento
      %th
      %th
      %th

  %tbody
    - @reservas.each do |reserva|
      %tr
        %td= reserva.data
        %td= reserva.hora
        %td= reserva.Cliente
        %td= reserva.Evento
        %td= link_to 'Show', reserva
        %td= link_to 'Edit', edit_reserva_path(reserva)
        %td= link_to 'Destroy', reserva, :method => :delete, :data => { :confirm => 'Are you sure?' }

