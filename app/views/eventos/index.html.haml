%h1 Listing eventos

%table
  %thead
    %tr
      %th Descricao
      %th Data
      %th Horario
      %th Local
      %th Estabelecimento
      %th
      %th
      %th

  %tbody
    - @eventos.each do |evento|
      %tr
        %td= evento.descricao
        %td= evento.data
        %td= evento.horario
        %td= evento.local
        %td= evento.Estabelecimento
        %td= link_to 'Show', evento
        %td= link_to 'Edit', edit_evento_path(evento)
        %td= link_to 'Destroy', evento, :method => :delete, :data => { :confirm => 'Are you sure?' }

